@model IEnumerable<WebApplication1.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h2>Employee List</h2>

<p>
    <a class="btn glyphicon glyphicon-plus" asp-action="Create"></a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EmployeeStatus)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Shift)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Manager)
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr style="cursor: pointer;"
            class="t-row"
            id="@("row_"+ item.ID)"
            onclick="window.location.href='@("http://localhost:49551/employees/Details/"+ item.ID)';"
        >
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnStartDateForDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnEndDateForDisplay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shift)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager)
            </td>
        </tr>
}
    </tbody>
</table>
